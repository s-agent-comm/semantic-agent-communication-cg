@prefix ledger: <https://ns.slashlife.ai/agent/ledger#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix del: <https://ns.slashlife.ai/agent/delegation#> .
@prefix acc: <https://ns.slashlife.ai/agent/accountability#> .
@prefix cap: <https://ns.slashlife.ai/agent/capability#> .

@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

#################################################################
# Ledger Core Classes
#################################################################

ledger:LedgerEvent a owl:Class ;
    rdfs:label "LedgerEvent" ;
    rdfs:comment "Canonical semantic event in append-only ledger stream." .

ledger:RuntimeLedgerEvent a owl:Class ;
    rdfs:subClassOf ledger:LedgerEvent ;
    rdfs:label "RuntimeLedgerEvent" ;
    rdfs:comment "Represents execution of an agent-level runtime action." .

ledger:GovernanceLedgerEvent a owl:Class ;
    rdfs:subClassOf ledger:LedgerEvent ;
    rdfs:label "GovernanceLedgerEvent" ;
    rdfs:comment "Represents governance or specification update events." .


#################################################################
# Event Identity and Temporal Ordering
#################################################################

ledger:eventId a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:timestamp a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:dateTime .

ledger:previousEventHash a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string ;
    rdfs:comment "Hash of preceding event in append-only chain." .

ledger:appendOnly a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Enforces append-only semantics; always true." .


#################################################################
# Integrity and Verification
#################################################################

ledger:hash a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:signature a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:publicKey a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:proofType a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:verifiedBy a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string ;
    rdfs:comment "External verification entity or attestation provider." .


#################################################################
# Actor and Delegation Binding
#################################################################

ledger:actor a owl:ObjectProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range agent:Agent ;
    rdfs:comment "Agent or principal responsible for the event." .

ledger:delegation a owl:ObjectProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range del:Delegation ;
    rdfs:comment "Delegation basis authorizing this event." .


#################################################################
# Action and Capability Links
#################################################################

ledger:action a owl:ObjectProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range core:Action .

ledger:intent a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string ;
    rdfs:comment "High-level semantic intent of an action." .

ledger:usesCapability a owl:ObjectProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range cap:Capability .

ledger:capabilityVersion a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string .


#################################################################
# Execution Context
#################################################################

ledger:executionContext a owl:ObjectProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range core:ExecutionContext .

ledger:environment a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string ;
    rdfs:comment "Additional semantic environment markers." .

ledger:hardwareAnchor a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string ;
    rdfs:comment "Hardware-backed attestation anchor." .

ledger:sandboxProfile a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string .


#################################################################
# Event Output and State Changes
#################################################################

ledger:result a owl:ObjectProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range core:ExecutionResult .

ledger:sideEffect a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string .

ledger:stateChange a owl:DatatypeProperty ;
    rdfs:domain ledger:RuntimeLedgerEvent ;
    rdfs:range xsd:string .


#################################################################
# Accountability Link
#################################################################

ledger:accountabilityRecord a owl:ObjectProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range acc:AccountabilityEvent ;
    rdfs:comment "Connects ledger event to accountability evaluation." .


#################################################################
# Compliance Annotation
#################################################################

ledger:aiActSection a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .

ledger:riskClassification a owl:DatatypeProperty ;
    rdfs:domain ledger:LedgerEvent ;
    rdfs:range xsd:string .


#################################################################
# Governance Extensions
#################################################################

ledger:governanceAction a owl:ObjectProperty ;
    rdfs:domain ledger:GovernanceLedgerEvent ;
    rdfs:range ledger:GovernanceAction .

ledger:specVersion a owl:ObjectProperty ;
    rdfs:domain ledger:GovernanceLedgerEvent ;
    rdfs:range ledger:SpecVersion .
