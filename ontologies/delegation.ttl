@prefix del: <https://ns.slashlife.ai/agent/delegation#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix cap: <https://ns.slashlife.ai/agent/capability#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .

@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .


#################################################################
# Delegation Ontology â€” Purpose
#################################################################

del:Delegation a owl:Class ;
    rdfs:subClassOf core:Delegation ;
    rdfs:label "Delegation" ;
    rdfs:comment """
    Represents a structured transfer of authority, allowing one Agent to act 
    under a bounded, semantically defined scope on behalf of another Agent.
    """ .


#################################################################
# Delegation Actors
#################################################################

del:delegatedBy a owl:ObjectProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range core:Agent ;
    rdfs:label "delegatedBy" ;
    rdfs:comment "Agent granting the authority." .

del:delegatesTo a owl:ObjectProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range core:Agent ;
    rdfs:label "delegatesTo" ;
    rdfs:comment "Agent receiving delegated authority." .


#################################################################
# Delegation Scope Model
#################################################################

del:DelegationScope a owl:Class ;
    rdfs:label "DelegationScope" ;
    rdfs:comment """
    Defines the semantic boundaries of delegated authority, including 
    capability constraints, intent framing, and operational limits.
    """ .

del:delegationScope a owl:ObjectProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range del:DelegationScope ;
    rdfs:label "delegationScope" .


# Capability constraint
del:allowedCapability a owl:ObjectProperty ;
    rdfs:domain del:DelegationScope ;
    rdfs:range cap:Capability ;
    rdfs:label "allowedCapability" ;
    rdfs:comment "Capabilities the delegated Agent is authorized to perform." .


# Intent constraint
del:intentConstraint a owl:ObjectProperty ;
    rdfs:domain del:DelegationScope ;
    rdfs:range core:Intent ;
    rdfs:label "intentConstraint" ;
    rdfs:comment "Specifies the intent boundary under which the delegate may operate." .


# Temporal boundary
del:validFrom a owl:DatatypeProperty ;
    rdfs:domain del:DelegationScope ;
    rdfs:range xsd:dateTime ;
    rdfs:label "validFrom" .

del:validUntil a owl:DatatypeProperty ;
    rdfs:domain del:DelegationScope ;
    rdfs:range xsd:dateTime ;
    rdfs:label "validUntil" .


#################################################################
# Delegation Chain Structure
#################################################################

del:DelegationChain a owl:Class ;
    rdfs:label "DelegationChain" ;
    rdfs:comment """
    A sequence of Delegation instances forming a multi-level authority graph.
    Useful for modeling nested or transitive delegation across agents.
    """ .

del:hasDelegation a owl:ObjectProperty ;
    rdfs:domain del:DelegationChain ;
    rdfs:range del:Delegation ;
    rdfs:label "hasDelegation" .


#################################################################
# Delegation Accountability Linkage
#################################################################

del:accountableFor a owl:ObjectProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range core:Action ;
    rdfs:label "accountableFor" ;
    rdfs:comment "Connects a Delegation to the Actions executed under that delegated authority." .

del:recordedIn a owl:ObjectProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range core:TraceEvent ;
    rdfs:label "recordedIn" ;
    rdfs:comment "Records delegation-related events within the semantic accountability chain." .


#################################################################
# Delegation Operational Constraints
#################################################################

del:ExecutionConstraint a owl:Class ;
    rdfs:label "ExecutionConstraint" ;
    rdfs:comment "Operational or environmental constraints limiting the delegate's permissible actions." .

del:executionConstraint a owl:ObjectProperty ;
    rdfs:domain del:DelegationScope ;
    rdfs:range del:ExecutionConstraint ;
    rdfs:label "executionConstraint" .


#################################################################
# Delegation Metadata
#################################################################

del:delegationId a owl:DatatypeProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range xsd:string ;
    rdfs:label "delegationId" .

del:note a owl:DatatypeProperty ;
    rdfs:domain del:Delegation ;
    rdfs:range xsd:string ;
    rdfs:label "note" .
