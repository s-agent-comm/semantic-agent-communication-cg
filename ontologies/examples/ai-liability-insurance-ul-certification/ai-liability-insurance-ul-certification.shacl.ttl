@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix core: <https://ns.slashlife.ai/agent/core#> .
@prefix agent: <https://ns.slashlife.ai/agent/agent#> .
@prefix intent: <https://ns.slashlife.ai/agent/intent#> .
@prefix delegation: <https://ns.slashlife.ai/agent/delegation#> .
@prefix security: <https://ns.slashlife.ai/agent/security-binding#> .
@prefix payment: <https://ns.slashlife.ai/agent/payment#> .
@prefix ex: <https://ns.slashlife.ai/agent/examples/ai-liability-insurance-ul-certification#> .

# --- Agent Base Shape (reusable) --- 

ex:AgentBaseShape
    a sh:NodeShape ;
    sh:targetClass core:Agent ;
    sh:property [
        sh:path agent:hasProfile ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path agent:coreIdentity ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:node [
                    a sh:NodeShape ;
                    sh:property [
                        sh:path agent:did ;
                        sh:minCount 1 ;
                        sh:maxCount 1 ;
                        sh:datatype xsd:string ;
                        sh:pattern "^did:.+$" ;
                    ]
                ]
            ]
        ]
    ] .

# --- Intent Shape --- 

ex:IntentShape
    a sh:NodeShape ;
    sh:targetClass core:Intent ;
    sh:property [
        sh:path intent:objective ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Delegation Shape --- 

ex:DelegateSurgicalTaskShape
    a sh:NodeShape ;
    sh:targetNode ex:DelegateSurgicalTask ;
    sh:property [
        sh:path delegation:delegatedBy ;
        sh:hasValue ex:Surgeon_Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegatesTo ;
        sh:hasValue ex:Surgical_Robot_Agent ;
    ] ;
    sh:property [
        sh:path delegation:delegationScope ;
        sh:minCount 1 ;
        sh:datatype xsd:string ;
    ] .

# --- Artifact Shapes --- 

ex:GlobalCert_Safety_CertificateShape
    a sh:NodeShape ;
    sh:targetNode ex:GlobalCert_Safety_Certificate ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:signedBy ;
                sh:hasValue ex:GlobalCert_Certification_Agent ;
            ]
        ]
    ] .

ex:Insurance_PolicyShape
    a sh:NodeShape ;
    sh:targetNode ex:Insurance_Policy ;
    sh:property [
        sh:path ex:referencesCertificate ;
        sh:hasValue ex:GlobalCert_Safety_Certificate ;
    ] ;
    sh:property [
        sh:path security:securityBinding ;
        sh:minCount 1 ;
        sh:node [
            a sh:NodeShape ;
            sh:property [
                sh:path security:signedBy ;
                sh:hasValue ex:Insurer_Underwriting_Agent ;
            ]
        ]
    ] .

# --- Action Shapes --- 

ex:AnalyzeIncidentTraceActionShape
    a sh:NodeShape ;
    sh:targetNode ex:AnalyzeIncidentTraceAction ;
    sh:property [
        sh:path ex:accessesLedger ;
        sh:minCount 1 ;
        sh:nodeKind sh:IRI ;
    ] ;
    sh:property [
        sh:path core:producesArtifact ;
        sh:hasValue ex:AdjudicationReport ;
    ] .

# --- Payment Shape --- 

ex:SettleClaimActionShape
    a sh:NodeShape ;
    sh:targetNode ex:SettleClaimAction ;
    sh:property [
        sh:path payment:amount ;
        sh:datatype xsd:string ;
    ] ;
    sh:property [
        sh:path payment:currency ;
        sh:hasValue "USD" ;
    ] ;
    sh:property [
        sh:path payment:payee ;
        sh:hasValue "did:example:metro-health-hospital" ;
    ] .
